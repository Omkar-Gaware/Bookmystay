<% layout("Layouts/boilerplate") -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2>Create a New Listing</h2>
                <form method="post" action="/listings">
                    <div class="mb-3">
                        <label for="title">Title</label>
                        <input name="listing[title]" placeholder="add a catchy title" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description">Description</label>
                        <textarea name="listing[description]" placeholder="enter description"
                            class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image">Image</label>
                        <input name="listing[image]" placeholder="enter image" class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price">Price</label>
                            <input name="listing[price]" placeholder="1200" type="number" class="form-control">
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country">Country</label>
                            <input name="listing[country]" placeholder="India" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location">Location</label>
                        <input name="listing[location]" placeholder="Pune/Mumbai" class="form-control">
                    </div>

                    <button class="btn btn-dark add-btn">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>